<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>

    <style name="NavigationDrawerTextStyle">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/neo_sans_pro_medium</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/_50sdp</item>
    </style>

    <style name="RadioButtonStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/colorLightGray</item>
        <item name="colorAccent">@color/colorLightGreen</item>
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/neo_sans_pro_medium</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:colorControlNormal">@color/colorDarkGray</item>
    </style>
</resources>
