<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlIncorrectAnswer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNegativeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neo_sans_pro_bold"
            android:gravity="center"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/_32ssp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/neo_sans_pro_regular"
            android:gravity="center"
            android:text="@string/correct_answer"
            android:textSize="@dimen/_16ssp" />

        <TextView
            android:id="@+id/tvCorrectAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/neo_sans_pro_bold"
            android:gravity="center"
            android:textSize="@dimen/_24ssp" />

        <ImageView
            android:id="@+id/ivNegativeCat"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_250sdp"
            android:layout_marginBottom="@dimen/_32sdp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnNegativeNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/background_button"
        android:fontFamily="@font/neo_sans_pro_bold"
        android:padding="@dimen/_16sdp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_18ssp" />
</RelativeLayout>