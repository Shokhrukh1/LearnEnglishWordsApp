<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlTournamentOpponent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/llOpponentInfo"
        android:fontFamily="@font/neo_sans_pro_bold"
        android:gravity="center"
        android:text="@string/your_opponent"
        android:textSize="32sp" />

    <LinearLayout
        android:id="@+id/llOpponentInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomButtons"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civOpponentPhoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_default_profile_photo"
            app:civ_circle_background_color="#CECECE" />

        <TextView
            android:id="@+id/tvOpponentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/neo_sans_pro_bold"
            android:gravity="center"
            android:text="NagibatorVasya"
            android:textColor="@color/colorBlue"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tvOpponentRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/neo_sans_pro_bold"
            android:gravity="center"
            android:text="34235"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button"
            android:fontFamily="@font/neo_sans_pro_bold"
            android:padding="16dp"
            android:text="@string/start_game"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvFromStartTournamentToMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/neo_sans_pro_bold"
            android:text="@string/on_the_menu"
            android:textColor="@color/colorLightGreen"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>